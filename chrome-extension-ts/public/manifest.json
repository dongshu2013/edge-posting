{
  "manifest_version": 3,
  "name": "BUZZ Reply Helper",
  "version": "1.0.0",
  "description": "Helps with replying to BUZZ posts on Edge Posting",
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:*/buzz*",
    "https://edge-posting.vercel.app/buzz*",
    "https://*.vercel.app/buzz*",
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/buzz*",
        "https://edge-posting.vercel.app/buzz*",
        "https://*.vercel.app/buzz*"
      ],
      "js": ["edge-posting-content.js"]
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["twitter-content.js"]
    }
  ]
} 